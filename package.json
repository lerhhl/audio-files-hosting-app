{
  "name": "audio-file-hosting-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run generate:db:client && next dev --turbopack",
    "build": "npm run generate:db:client && next build",
    "start": "npm run migrate:deploy && next start",
    "lint": "next lint",
    "generate:db:client": "prisma generate",
    "migrate:create": "prisma migrate dev --name",
    "migrate:apply": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "db:seed": "prisma db seed"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.6.0",
    "jose": "^6.0.10",
    "next": "15.3.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.0",
    "prisma": "^6.6.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5"
  }
}
